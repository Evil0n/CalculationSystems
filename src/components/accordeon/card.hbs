<div class="card">
    <div class="card-header" id="{{id}}header">
        <h2 class="mb-0">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                    data-target="#{{id}}" aria-expanded="false" aria-controls="{{id}}">
                <img src="{{src}}" srcset="{{srcset}} 2x" alt=""> {{title}}
            </button>
        </h2>
    </div>
    <div id="{{id}}" class="collapse" aria-labelledby="{{id}}header" data-parent="#accordionExample">
        <div class="card-body">
            <div>{{description}}</div>
        </div>
    </div>
</div>
